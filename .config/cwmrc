

# termbar
ignore  "termbar"
gap  27 0 2 2
autogroup  0  "termbar,termbar"


# Turn on sticky-group mode
sticky yes


# Reset all keybindings
unbind-key      all
unbind-mouse    all


# Switch workspace
bind-key    4-1    group-only-1
bind-key    4-2    group-only-2
bind-key    4-3    group-only-3
bind-key    4-4    group-only-4
bind-key    4-5    group-only-5


# Moved window to workspace
bind-key    4S-1    window-movetogroup-1
bind-key    4S-2    window-movetogroup-2
bind-key    4S-3    window-movetogroup-3
bind-key    4S-4    window-movetogroup-4
bind-key    4S-5    window-movetogroup-5


# Quit
bind-key  4S-q  quit


# Programs
bind-key  4S-Return  alacritty
bind-key  4-p        "dmenu_run -fn 'monospace:size12'"
bind-key  4-F12      "scrot -q 100 -s -f '/home/denis/Pictures/screenshots/%Y-%m-%d-%T-screenshot.png'"


# Close window
bind-key  4S-c  window-close


# Window tiling
bind-key  4-h  window-htile
bind-key  4-v  window-vtile
bind-key  4-m  window-maximize


# Mouse keys
bind-mouse  4-1  window-move
bind-mouse  4-3  window-resize


