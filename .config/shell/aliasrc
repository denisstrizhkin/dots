alias ls="ls -Fa"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"

alias tmux="tmux -f \"$XDG_CONFIG_HOME\"/tmux.conf"
alias mbsync="mbsync -c \"$XDG_CONFIG_HOME\"/mbsyncrc"
alias notmuch-clean="notmuch search --output=files --format=text0 tag:killed | xargs -r0 rm; notmuch new"

alias ect="emacsclient -t"

alias s_xi="doas xbps-install"
alias s_xr="doas xbps-remove"
alias s_xq="doas xbps-query"
alias s_xi_snf="s_xi --repository hostdir/binpkgs/nonfree"
alias s_xi_s="s_xi --repository hostdir/binpkgs"


alias s_r="doas reboot"
alias s_p="doas shutdown -p now"

alias g_dot="git --git-dir=\"$XDG_CONFIG_HOME\"/dotfiles/ --work-tree=\"$HOME\""
